{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$defs": {
    "string": {
      "type": "string",
      "minLength": 1
    }
  },
  "type": "object",
  "properties": {
    "button": {
      "type": "object",
      "properties": {
        "InputReceiptManually": {
          "$ref": "#/$defs/string"
        },
        "InputReceiptManuallyByPositions": {
          "$ref": "#/$defs/string"
        }
      },
      "required": [
        "InputReceiptManually",
        "InputReceiptManuallyByPositions"
      ]
    },
    "statsPage": {
      "type": "object",
      "properties": {
        "Title": {
          "$ref": "#/$defs/string"
        },
        "button": {
          "type": "object",
          "properties": {
            "MoreReceipts": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "MoreReceipts"
          ]
        },
        "label": {
          "type": "object",
          "properties": {
            "Shopping": {
              "$ref": "#/$defs/string"
            },
            "byCategories": {
              "$ref": "#/$defs/string"
            },
            "byPositions": {
              "$ref": "#/$defs/string"
            },
            "byShops": {
              "$ref": "#/$defs/string"
            },
            "unknownShop": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "Shopping",
            "byCategories",
            "byPositions",
            "byShops",
            "unknownShop"
          ]
        },
        "message": {
          "type": "object",
          "properties": {
            "NoPositions": {
              "$ref": "#/$defs/string"
            }
          },
          "required": [
            "NoPositions"
          ]
        }
      },
      "required": [
        "Title",
        "button",
        "label",
        "message"
      ]
    }
  },
  "required": [
    "button",
    "statsPage"
  ]
}
